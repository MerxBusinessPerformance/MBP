<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_purchase" model="ir.ui.view">
        <field name="name">res.config.settings.vendor.stocks</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="vendor_product_management.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='vendor_portal_option_option']" position="after">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="show_stocks_in_portal"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="show_stocks_in_portal"/>
                        <div class="text-muted">
                            Let vendors observe, manage, and import their stock levels
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
