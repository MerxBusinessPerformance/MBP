<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_purchase" model="ir.ui.view">
        <field name="name">res.config.settings.vendor.stocks</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='purchase']" position="inside">
                <h2>Vendor Product Management</h2>
                <div class="row mt16 o_settings_container" id="vendor_product_management">
                    <div name="vendor_portal_option_option" class="col-xs-12 col-md-6 o_setting_box">
                        <div name="extra_vendor_portal" class="o_setting_left_pane">
                            <field name="module_vendor_portal_management"/>
                        </div>
                        <div name="extra_vendor_portal_2" class="o_setting_right_pane">
                            <label for="module_vendor_portal_management"/>
                            <div name="extra_vendor_portal_2_hint" class="text-muted">
                                Turn on to let vendors manage products in Odoo portal by themselves. The tool
                                <a href="https://apps.odoo.com/apps/modules/14.0/vendor_portal_management/">
                                    Vendor Products Portal
                                </a> (100 Euros extra) is required
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" id="vendor_product_management_1st_block">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="vendor_product_import_id"/>
                            <field name="vendor_product_import_id"/>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="vendor_stocks_import_id"/>
                            <field name="vendor_stocks_import_id"/>
                        </div>
                    </div>
                    <div class="col-12 col-lg-12 o_setting_box">
                        <label for="vendor_product_help"/>
                        <field name="vendor_product_help"/>
                    </div>
                    <div class="col-12 col-lg-12 o_setting_box">
                        <label for="vendor_stocks_help"/>
                        <field name="vendor_stocks_help"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
